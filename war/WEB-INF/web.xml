<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.panda.video.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/pandavideochat/greet</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>tokenServlet</servlet-name>
    <servlet-class>com.panda.video.server.SessionTokenServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>tokenServlet</servlet-name>
    <url-pattern>/pandavideochat/token</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>UserManagmentServlet</servlet-name>
    <servlet-class>com.panda.video.server.UserManagmentServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UserManagmentServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.panda.video.server.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ListUsersServlet</servlet-name>
    <servlet-class>com.panda.video.server.ListUsersServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ListUsersServlet</servlet-name>
    <url-pattern>/listUsers</url-pattern>
  </servlet-mapping>
  
  <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
  </filter>
  <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>PandaVideoChat.html</welcome-file>
  </welcome-file-list>

</web-app>
